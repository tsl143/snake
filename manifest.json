{
	"manifest_version": 2,
	"name": "Snake",
	"description": "Play Snake right on your screen.",
	"version": "2.4",
	"icons": {
		"32": "icons/icon_32.png",
		"48": "icons/icon_48.png",
		"64": "icons/icon_64.png",
		"128": "icons/icon_128.png"
	},
	"browser_action": {
	    "default_icon": "icons/icon_32.png",
	    "default_title": "Snake"
	},
	"background": {
		"scripts": ["js/bg.js"]
	},
	"permissions": ["activeTab"]
}
